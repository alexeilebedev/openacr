#!/usr/bin/env bash
if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi

PATH=$PATH:$HOME/bin:$HOME/.local/bin:bin
EDITOR="emacs -nw"

if [ "$PS1" != "" ]; then
    unset SSH_ASKPASS
    HISTFILESIZE=100000
    HISTCONTROL="ignoreboth"
    alias more=less
    shopt -s histappend
    PROMPT_COMMAND='history -a'
    bind "set completion-query-items 1000"
    HOSTNAME=`hostname -f 2>/dev/null`
    PS1="\e[0;34m[\$? \D{%b %d %H:%M:%S}] \u@$HOSTNAME\e[0;32m:\w\e[m \n\$ "
    LS_OPTIONS='--color=auto --quoting-style=shell'
    # acr_compl -install
    # This is a script suitable for inclusion in .bash_profile
    complete -o default -o nospace -C acr_compl abt abt_md acr acr_compl acr_ed acr_in acr_my amc amc_gc amc_vis ams_cat ams_sendtest atf_amc atf_ci atf_cmdline atf_comp atf_cov atf_fuzz atf_gcli atf_nrun atf_unit bash2html gcli mdbg mysql2ssim orgfile sandbox src_func src_hdr src_lim ssim2csv ssim2mysql ssimfilt strconv sv2ssim
fi
    
# export section
export PS1
export LS_OPTIONS
export PATH
export EDITOR
export HISTFILESIZE
export HISTCONTROL
export PROMPT_COMMAND
